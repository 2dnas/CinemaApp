<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CinemaMainStage.Confirmation"
           alignment="CENTER"
            prefHeight="400.0" prefWidth="600.0">

    <VBox fx:id="VBoxConfirmation" alignment="CENTER" spacing="15" >

        <Label text="გთხოვთ შეიყვანოთ Username და ფილმის სახელი" style="-fx-font-size: 20px; -fx-text-fill:#000000; "/>

        <TextField fx:id="usernameTextField" promptText="შეიყვანეთ სახელი" maxWidth="250" />

        <TextField fx:id="movieName" promptText="შეიყვანეთ ფილმის სახელი" maxWidth="250" />


        <Button text="ყიდვა" prefHeight="55" prefWidth="280" onAction="#onBuy"
                style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-font-size: 17px;
                -fx-font-weight: bold; -fx-background-color: #798a78; -fx-cursor: hand;"/>



    </VBox>

</StackPane>
